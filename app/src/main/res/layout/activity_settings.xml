<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--第一部分-->
        <TextView
            android:id="@+id/tv_static"
            android:text="设置"
            android:textSize="30sp"
            android:textColor="#3b4b57"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/v_start"
            android:background="#ced7de"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp" />

        <!--第二部分-->
        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <TextView
                android:text="修改密码"
                android:textSize="16sp"
                android:textColor="#364c58"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentRight="true"
                android:background="@mipmap/back2_right"
                android:layout_width="16dp"
                android:layout_marginRight="12dp"
                android:layout_height="16dp" />

        </RelativeLayout>
        <View
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <!--第三部分-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_match2"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:text="手机号"
                android:textColor="#364c58"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/iv_right_back2"
                android:layout_centerVertical="true"
                android:src="@mipmap/back2_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toLeftOf="@id/iv_right_back2"
                android:id="@+id/tv_input2"
                android:text="请绑定"
                android:textSize="14sp"
                android:textColor="#a5acb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:id="@+id/v_line2"
            android:visibility="gone"
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <View
            android:visibility="gone"
            android:id="@+id/v_line4"
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!--第七部分-->
        <RelativeLayout
            android:id="@+id/layout_cache"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/rv_focus_seletor"

            android:gravity="center_vertical">
            <TextView
                android:text="清空缓存"
                android:textColor="#364c58"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View

                android:background="@mipmap/back2_right"
                android:layout_width="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"

                android:layout_height="18dp" />
            <TextView
                android:id="@+id/tv_cache"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="#a5acb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <!--第七部分-->
        <RelativeLayout
            android:id="@+id/layout_check"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/rv_focus_seletor"
            android:gravity="center_vertical">
            <TextView
                android:text="检查更新"
                android:textColor="#364c58"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View

                android:background="@mipmap/back2_right"
                android:layout_width="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"

                android:layout_height="18dp" />

        </RelativeLayout>
        <View
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <!--第八部分-->
        <RelativeLayout
            android:id="@+id/layout_contact"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/rv_focus_seletor"

            android:layout_height="44dp">
            <TextView
                android:text="联系我们"
                android:textColor="#364c58"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@mipmap/back2_right"
                android:layout_width="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"

                android:layout_height="18dp" />
        </RelativeLayout>
        <View
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:id="@+id/layout_about_us"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <TextView
                android:text="关于我们"
                android:textColor="#364c58"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@mipmap/back2_right"
                android:layout_width="18dp"
                android:layout_marginRight="12dp"

                android:layout_alignParentRight="true"
                android:layout_height="18dp" />
        </RelativeLayout>
        <View
            android:background="#ced7de"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
    <Button
        android:text="退出程序"
        android:id="@+id/bt_exit"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
</RelativeLayout>
